# Docker-specific environment configuration
# This file is committed to git and used by docker-compose
# For local development without Docker, copy .env.example to .env

# Environment
ENVIRONMENT=development

# Database (Docker service name)
DATABASE_URL=postgresql+asyncpg://tessera:tessera@db:5432/tessera

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Authentication
AUTH_DISABLED=false
BOOTSTRAP_API_KEY=tessera-dev-key

# Admin Bootstrap
ADMIN_EMAIL=admin@tessera.dev
ADMIN_PASSWORD=adminpass123
ADMIN_NAME=Admin

# Demo Mode (shows credentials on login)
DEMO_MODE=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000,http://localhost:8001

# Redis (Docker service name)
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_READ=1000/minute
RATE_LIMIT_WRITE=100/minute
RATE_LIMIT_ADMIN=50/minute
RATE_LIMIT_GLOBAL=5000/minute
